<%- include('partials/head') %> 

  <div class="spread container">
    <h1 class="my-4"></h1>
    <a href="javascript:history.back()" class="btn btn-success text-white">Back</a>
  </div>
  <div class="container bg-white mt-3 px-4 py-4">
    <h1><%= listing.listingName %> </h1>
    <div class="row">
      <div class="col">
        <img src="https://www.holidify.com/images/bgImages/BALI.jpg" alt="" srcset="" class="listingImage">
      </div>
      <div class="col desc-box">
        <p>Uploaded By: <mark>@<%= listing.userName %></mark></p>
        <h3><%= listing.description %></h3>
        <h4><%= listing.address%></h4>
        <div class="controls">
          <a href="/listings/<%= listing._id %>/update" class="btn btn-primary">Update</a>

          <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
            <button type="submit" class="btn btn-danger text white">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="container py-2">
    <h2 class="text-uppercase fw-light">Reviews</h2>
  <% for (list of listing.reviews) {%> 
    <p class="bg-white px-2 py-2 fw-bold"> <%= list %> </p>
  <% } %> 
  </div>
  <div class="container py-2 ">
    <form action="/listings/<%= listing._id %>/addReview?_method=PUT" method="post">
      <textarea id="" name="review" class="w-100" placeholder="Add a review here..." required> </textarea>
      <input type="submit" value="Add review" class="btn btn-dark">
    </form>
    

  </div>

<%- include('partials/foot') %> 